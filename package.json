{
	"name": "vscode-uitests-tooling",
	"displayName": "Tooling for VS Code UI Tests by Red Hat",
	"description": "UI Tests Utils for VS Code extensions",
	"version": "2.1.0",
	"author": "Dominik Jelinek",
	"license": "Apache-2.0",
	"main": "out/index.js",
	"types": "out/index.d.ts",
	"files": [
		"out/**/*.js",
		"out/**/*.d.ts"
	],
	"keywords": [
		"utils",
		"uitests",
		"redhat",
		"camel-tooling",
		"tooling",
		"vscode-extension-tester"
	],
	"maintainers": [
		{
			"name": "Dominik Jelinek",
			"email": "djelinek@redhat.com"
		}
	],
	"homepage": "https://github.com/djelinek/vscode-uitests-tooling#readme",
	"bugs": {
		"url": "https://github.com/djelinek/vscode-uitests-tooling/issues",
		"email": "djelinek@redhat.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/djelinek/vscode-uitests-tooling.git"
	},
	"scripts": {
		"prepack": "npm install && rimraf out && npm run build",
		"compile": "tsc -p ./",
		"build": "npm run compile",
		"clean": "rimraf out node_modules *.tgz && npm run clean --prefix test-project",
		"lint": "eslint 'src/**/*.ts'",
		"dev": "npm pack",
		"pretest": "npm pack && npm run prepare-tooling --prefix test-project && npm ci --prefix test-project",
		"test": "npm test --prefix test-project"
	},
	"dependencies": {
		"chai": "^4.2.0",
		"fs-extra": "^8.1.0",
		"ts-essentials": "^3.0.2"
	},
	"devDependencies": {
		"@types/chai": "^4.2.3",
		"@types/fs-extra": "^8.0.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^14.0.9",
		"@typescript-eslint/eslint-plugin": "^2.9.0",
		"@typescript-eslint/parser": "^2.9.0",
		"eslint": "^7.20.0",
		"rimraf": "^3.0.2",
		"typescript": "^3.9.9",
		"vscode-extension-tester": "^4.0.1",
		"vscode-extension-tester-native": "^3.0.2"
	},
	"peerDependencies": {
		"mocha": "^8.2.0",
		"vscode-extension-tester": "^4.0.1",
		"vscode-extension-tester-native": "^3.0.2"
	}
}
